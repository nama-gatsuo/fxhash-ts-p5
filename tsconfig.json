{
    "compilerOptions": {
        "baseUrl": "./src",
        "outDir": "./dist",
        "module": "es6",
        "moduleResolution": "node",
        "allowJs": true,
        "target": "es6",
        "sourceMap": false,
        "forceConsistentCasingInFileNames": false,
        "removeComments": true,
        "skipLibCheck": true,
        "strict": true,
        "noImplicitReturns": true,
        "traceResolution": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "./src/**/*"
    ]
}